# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://user:password@host:5432/database"
DIRECT_URL="postgresql://user:password@host:5432/database"  # For migrations

# Prisma Configuration
PRISMA_CLIENT_ENGINE_TYPE=binary

# Email Configuration (SMTP)
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL
ADMIN_PHONE_NUMBER=+1234567890

# SendGrid Configuration
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=your_verify_service_sid

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_very_secure_random_jwt_secret_key_here

# KYC Configuration
KYC_APP_ID=your_kyc_app_id
KYC_API_KEY=your_kyc_api_key

# OAuth - Google
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# OAuth - LinkedIn (Not configured)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/v1/auth/linkedin/callback

# Frontend URL
FRONTEND_URL=http://localhost:5173
PRODUCTION_FRONTEND_URL=https://your-production-frontend.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile
HUGGINGFACE_API_KEY=your_huggingface_token
ASSEMBLYAI_API_KEY=your_assemblyai_key

# Perfios KYC Configuration
PERFIOS_SECURE_ID=your_perfios_secure_id
PERFIOS_SECURE_CRED=your_perfios_credentials
PERFIOS_ORG_ID=your_org_id
PERFIOS_API_BASE_URL=https://hub-test.perfios.ai
PERFIOS_TIMEOUT=180000

# DigiLocker Configuration
DIGILOCKER_REDIRECT_URL=http://localhost:3000/api/v1/kyc/digilocker/callback
DIGILOCKER_CUSTOM_DOC_LIST=ADHAR,PANCR
DIGILOCKER_SESSION_EXPIRY_MINUTES=30

# Frontend URLs for KYC redirects
FRONTEND_KYC_SUCCESS_URL=http://localhost:5173/assessment/instructions
FRONTEND_KYC_ERROR_URL=http://localhost:5173/kyc/error

# System Admin Configuration
SYSTEM_ADMIN_ID=your_system_admin_uuid

# Ngrok URL (for local development)
NGROK_URL=https://your-subdomain.ngrok-free.dev

# Cron Secret (for external cron services like UptimeRobot)
CRON_SECRET=your_random_cron_secret_key
